@model Category

@{
    string pageTitle = Model == null ? "Create Category" : "Edit Category";
    string pageButton = Model == null ? "Create" : "Update";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="row pb-2">
                @pageTitle
            </h2>
            <hr/>
        </div>

        @* <div class="mb-3 text-danger" asp-validation-summary="ModelOnly"></div>  this will display all the errors at the top of the form, All- shows all errors, ModelOnly- targets only errors not related to any fields *@
        <div class="mb-3">
            <label for="Name" class="form-label">Category Name</label>
            <input type="text" class="form-control"  asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input type="number" class="form-control" asp-for="DisplayOrder" min="1">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        
        <div class="row mb-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">@pageButton</button>
            </div>
            <div class="col-6 col-md-4">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back to list</a>
            </div>
            
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

