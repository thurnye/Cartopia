@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="row pb-2">
                Create Category
            </h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label for="exampleInputCategoryName1" class="form-label">Category Name</label>
            <input type="text" class="form-control"  asp-for="Name">
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input type="number" class="form-control" asp-for="DisplayOrder">
        </div>
        
        <div class="row mb-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-4">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back to list</a>
            </div>
            
        </div>


    </div>
</form>