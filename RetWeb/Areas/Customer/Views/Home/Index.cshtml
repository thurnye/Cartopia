<div class="row row-cols-1 row-cols-md-3 row-cols-sm-2 row-cols-lg-4 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card border-0 p-3 shadow boarder-top border-5 rounded">
                <img src="@product.ImageUrl" class="card-img-top rounded" alt="product Image" style="height: 160px; object-fit: contain;" />
            <div class="card-body pb-0">
                <div>
                    <h5 class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</h5>
                    <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                </div> 
                <div>
                    <p class="text-dark opacity-75 text-center mb-0">
                        List Price: <span class="text-decoration-line-through">@product.Price.ToString("c")</span>
                    </p>
                    <p class="text-dark opacity-75 text-center">
                        As low as: <span>@product.Price100.ToString("c")</span>
                    </p>
                </div>
                <a asp-action="Details" asp-controller="Home" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
            </div>
        </div>
        </div>
    }
</div>
